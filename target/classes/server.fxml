<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ServerController"
            stylesheets="@styles.css"
            style="-fx-background-color: linear-gradient(to bottom, #95e8d7, #7dace4);">

    <top>
        <VBox spacing="15" style="-fx-padding: 20;">
            <!-- Header -->
            <HBox alignment="CENTER" spacing="10">

                <Text text="3-Card Poker Server"
                      style="-fx-font-size: 28; -fx-font-weight: bold; -fx-fill: #8971d0; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 10, 0, 2, 2);"/>
            </HBox>

            <!-- Server Controls -->
            <HBox alignment="CENTER" spacing="20" styleClass="server-controls">
                <VBox spacing="5">
                    <Label text="Server Port:" styleClass="server-label"/>
                    <TextField fx:id="portField" promptText="5555"
                               styleClass="server-textfield" prefWidth="120"/>
                </VBox>

                <Button fx:id="startButton" text="â–¶ Start Server"
                        onAction="#handleStartButton" styleClass="server-button"/>
                <Button fx:id="stopButton" text="â¹ Stop Server"
                        onAction="#handleStopButton" styleClass="server-button stop-button"/>

                <VBox spacing="5">
                    <Label text="Connected Clients:" styleClass="server-label"/>
                    <Label fx:id="clientCountLabel" text="0"
                           styleClass="client-count-label"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 0 20 20 20;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Text text="ðŸ“‹ Server Log" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-fill: white;"/>
                <Text text="(Real-time game activity)" style="-fx-font-size: 12; -fx-fill: rgba(255,255,255,0.7);"/>
            </HBox>
            <TextArea fx:id="logTextArea" prefHeight="400"
                      styleClass="server-log" editable="false"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 15; -fx-background-color: rgba(0,0,0,0.3);">
            <Text text="Server Status: " style="-fx-fill: white; -fx-font-weight: bold;"/>
            <Text fx:id="serverStatusText" text="Ready to start"
                  style="-fx-fill: #4CAF50; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>
</BorderPane>